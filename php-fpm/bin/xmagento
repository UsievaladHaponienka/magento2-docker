#!/bin/bash

# run magento cli without xdebug and with opcache

[[ "${DEBUG}" =~ ^(true|on|1)$ ]] && set -x

MAGENTO_BIN_PATH="/var/www/magento/bin/magento"
MAGENTO_COMMAND="php -d memory_limit=-1 -d opcache.enable_cli=1 -d opcache.enable=1 -d max_execution_time=-1 -d xdebug.remote_enable=Off -d xdebug.profiler_enable=0 ${MAGENTO_BIN_PATH}"

chmod +x ${MAGENTO_BIN_PATH}
sudo -u www-data ${MAGENTO_COMMAND} $*
