#!/bin/bash

[[ "${DEBUG}" =~ ^(true|on|1)$ ]] && set -x

# Configure composer
if [ ! -f "$MAGENTO_COMPOSER_HOME/auth.json" ]; then
AUTH_DUMP='cat <<EOF > ${MAGENTO_COMPOSER_HOME}/auth.json
{
  "github-oauth": {
    "github.com": "${COMPOSER_GITHUB_TOKEN}"
  },
  "http-basic": {
    "repo.magento.com": {
      "username": "${COMPOSER_MAGENTO_USERNAME}",
      "password": "${COMPOSER_MAGENTO_PASSWORD}"
    }
  }
}
EOF'
    su -c "${AUTH_DUMP}" -s /bin/bash www-data
fi

COMPOSER=$(which composer.phar)

chmod +x $COMPOSER
su -c "COMPOSER_HOME=/var/www/.composer/ $COMPOSER $*" -s /bin/bash www-data
